<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.rannaghor">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Rannaghor"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".BillingActivity"
            android:exported="false" />
        <activity
            android:name=".OrderActivity"
            android:exported="true"></activity>
        <activity
            android:name=".CartActivity"
            android:exported="true"
            android:parentActivityName=".CartActivity" />
        <activity
            android:name=".ItemListActivity"
            android:exported="false"
            android:parentActivityName=".ItemListActivity" />
        <activity
            android:name=".RestaurantListAcivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".LoginAndRegistrationActivity" />
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".OnboardingScreenActivity" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>