<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestaurantListAcivity"
    android:background="@color/white">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_restaurant_list"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:elevation="2dp"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
            android:background="@drawable/searchbar_bg"
            app:layout_scrollFlags="scroll|enterAlways">
            <TextView
                android:id="@+id/tv_item_category"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:textSize="26dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"/>
        </androidx.appcompat.widget.Toolbar>
        <TextView
            android:id="@+id/tv_rest_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All restaurants serving"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_below="@id/tb_restaurant_list"/>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_restaurant_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_rest_label"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_margin="10dp"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>