<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/white"
        android:layout_margin="2dp"
        app:cardElevation="2dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:background="@color/white"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Item Name"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_item_category"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textSize="12dp"
                    android:textColor="@android:color/darker_gray"
                    android:text="item_ category"/>
                <TextView
                    android:id="@+id/tv_item_price"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textSize="12dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:text="item_price"/>
                <TextView
                    android:id="@+id/tv_item_tags"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textSize="12dp"
                    android:textColor="@android:color/darker_gray"
                    android:text="item_tags"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:src="@drawable/rating"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:orientation="vertical"
                android:paddingLeft="45dp"
                android:background="@color/white">
                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="20dp"
                    android:background="@color/white"
                    android:layout_gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/iv_item_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
                <Button
                    android:id="@+id/btn_add_item"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:text="ADD"
                    android:drawableEnd="@drawable/ic_baseline_add_24"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/primary_blue"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/add_to_cart_button"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_quantity_layout"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="5dp"
                    android:background="@color/white"
                    android:layout_gravity="center">
                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:background="@color/primary_blue">
                        <Button
                            android:id="@+id/btn_qty_rm"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/primary_blue"
                            android:drawableStart="@drawable/ic_baseline_remove_24"
                            />
                        <TextView
                            android:id="@+id/tv_qty_disp"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="1"
                            android:textColor="@color/white"
                            android:gravity="center"/>
                        <Button
                            android:id="@+id/btn_qty_add"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:drawableStart="@drawable/ic_baseline_add"
                            android:background="@color/primary_blue"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>